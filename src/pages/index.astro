---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { getAllCharacters } from "../service/rickAndMortyAPI";

let charaters;
charaters = await getAllCharacters();
---

<Layout title="Rick and Morty">
  <section>
    {charaters.map((charater) => <Card character={charater} />)}
  </section>
</Layout>

<style>
  section {
    width: 100%;
    max-width: 1200px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
</style>
